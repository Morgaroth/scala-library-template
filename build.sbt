import giter8.Plugin.G8Keys
import giter8.Plugin._
import sbt.ScriptedPlugin._

giter8Settings

resolvers += Resolver.url("typesafe", url("http://repo.typesafe.com/typesafe/ivy-releases/"))(Resolver.ivyStylePatterns)

